{
  "swagger": "2.0",
  "info": {
    "description": "A dockerized micro-service for adding, updating, retrieving and deleting files.",
    "version": "1.0.0",
    "title": "File Manager",
    "termsOfService": "",
    "contact": {
      "email": "team-falcon@hng.tech"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "tags": [
    {
      "name": "user",
      "description": "Everything about user and authentication"
    },
    {
      "name": "file",
      "description": "Everything about file manager"
    },
    {
      "name": "configure",
      "description": "Configuring user preferences"
    }
  ],
  "schemes": [
    "https",
    "http"
  ],
  "paths": {
    "/v1/configure": {
      "post": {
        "tags": [
          "configure"
        ],
        "summary": "Configure response",
        "description": "",
        "operationId": "configureResponse",
        "consumes": [
          "multipart/form-data"
        ],
        "produces": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "in": "formData",
            "name": "responseType",
            "type": "string",
            "required": true,
            "description": "Response type"
          },
          {
            "in": "formData",
            "name": "fullURL",
            "type": "boolean",
            "required": true
          },
          {
            "in": "formData",
            "name": "titleAsName",
            "type": "boolean",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/Configure"
            }
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
      }
    },
    "/v1/users/signup": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "Sign up",
        "description": "",
        "operationId": "userSignup",
        "consumes": [
          "application/x-www-form-urlencoded"
        ],
        "produces": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "in": "formData",
            "name": "fullName",
            "type": "string",
            "required": true,
            "description": "Full name of user"
          },
          {
            "in": "formData",
            "name": "email",
            "type": "string",
            "description": "Email address of user",
            "required": true
          },
          {
            "in": "formData",
            "name": "password",
            "type": "string",
            "description": "Password of user",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/UserResponse"
            }
          }
        }
      }
    },
    "/v1/users/auth": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "Authenticate user",
        "description": "",
        "operationId": "userAuth",
        "consumes": [
          "application/x-www-form-urlencoded"
        ],
        "produces": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "in": "formData",
            "name": "email",
            "type": "string",
            "description": "Email address of user",
            "required": true
          },
          {
            "in": "formData",
            "name": "password",
            "type": "string",
            "description": "Password of user",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/UserResponse"
            }
          }
        }
      }
    },
    "/v1/files": {
      "post": {
        "tags": [
          "file"
        ],
        "summary": "Upload a new file",
        "description": "",
        "operationId": "uploadFile",
        "consumes": [
          "multipart/form-data"
        ],
        "produces": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "in": "formData",
            "name": "title",
            "type": "string",
            "required": true,
            "description": "File title"
          },
          {
            "in": "formData",
            "name": "file",
            "type": "file",
            "description": "The file to upload",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/ApiResponse"
            }
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
      },
      "get": {
        "tags": [
          "file"
        ],
        "summary": "Get all files",
        "description": "",
        "operationId": "updateFile",
        "produces": [
          "application/json",
          "application/xml"
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/File"
              },
              "xml": {
                "name": "files",
                "wrapped": true
              }
            }
          },
          "400": {
            "description": "Invalid status value"
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
      }
    },
    "/v1/files/{fileId}": {
      "get": {
        "tags": [
          "file"
        ],
        "summary": "Find file by ID",
        "description": "Returns a single file",
        "operationId": "getFileById",
        "produces": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "name": "fileId",
            "in": "path",
            "description": "ID of file to return",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/File"
            }
          },
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "File not found"
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
      },
      "put": {
        "tags": [
          "file"
        ],
        "summary": "Updates a file",
        "description": "",
        "operationId": "updateFileWithForm",
        "consumes": [
          "multipart/form-data"
        ],
        "produces": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "name": "fileId",
            "in": "path",
            "description": "ID of file to update",
            "required": true,
            "type": "string"
          },
          {
            "in": "formData",
            "name": "name",
            "type": "string",
            "required": true,
            "description": "File name"
          },
          {
            "in": "formData",
            "name": "file",
            "type": "file",
            "description": "The file to upload",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/File"
            }
          },
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "File not found"
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
      },
      "delete": {
        "tags": [
          "file"
        ],
        "summary": "Deletes a file",
        "description": "",
        "operationId": "deleteFile",
        "produces": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "name": "fileId",
            "in": "path",
            "description": "File id to delete",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/File"
            }
          },
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "File not found"
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
      }
    }
  },
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  },
  "definitions": {
    "File": {
      "type": "object",
      "required": [
        "name",
        "url"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string",
          "example": "doggie"
        },
        "fileURL": {
          "type": "string",
          "example": "https://cloudinary.com/doggie.png"
        },
        "time": {
          "type": "string",
          "format": "date"
        }
      },
      "xml": {
        "name": "File"
      }
    },
    "ApiResponse": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "type": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      }
    },
    "UserResponse": {
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "example": "28937837gyu82746hfg76"
        },
        "fullName": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "token": {
          "type": "string"
        }
      }
    },
    "Configure": {
      "type": "object",
      "required": [
        "responseType",
        "fullURL",
        "titleAsName"
      ],
      "properties": {
        "responseType": {
          "type": "string",
          "example": "JSON or XML"
        },
        "fullURL": {
          "type": "boolean"
        },
        "titleAsName": {
          "type": "boolean"
        }
      }
    }
  },
  "host": "file.microapi.dev",
  "basePath": "/"
}
